<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >
    <TableRow 
                            android:layout_width="fill_parent"
                     android:layout_margin="0dp"
                    android:gravity="center" 
        >
        <TextView android:id="@+id/permission_insert_name"
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:textSize="20dp"
	        android:textStyle="bold"
	                android:dividerHeight="0dp"
	        android:textColor="@color/darksalmon"
	        android:gravity="center"
	        />
        </TableRow>
        <TableRow 
               android:layout_width="fill_parent"
                     android:layout_margin="0dp"
                    android:gravity="center" 
        >
        <TextView android:id="@+id/permission_insert_truename"
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:textSize="20dp"
	        android:textStyle="bold"
	                android:dividerHeight="0dp"
	        android:textColor="@color/darksalmon"
	        android:gravity="center"
	        />
        </TableRow>
        <TableRow 
               android:layout_width="fill_parent"
                     android:layout_margin="0dp"
                    android:gravity="center" 
        >
        <TextView android:id="@+id/permission_insert_address"
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:textSize="20dp"
	        android:textStyle="bold"
	                android:dividerHeight="0dp"
	        android:textColor="@color/darksalmon"
	        android:gravity="center"
	        />
        </TableRow>
        <TableRow 
                            android:layout_width="fill_parent"
                     android:layout_margin="0dp"
                    android:gravity="center" 
        >
        <TextView android:id="@+id/permission_insert_phone"
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:textSize="20dp"
	        android:textStyle="bold"
	                android:dividerHeight="0dp"
	        android:textColor="@color/darksalmon"
	        android:gravity="center"
	        />
        </TableRow>
	    <TableRow 
                            android:layout_width="fill_parent"
                     android:layout_margin="0dp"
                    android:gravity="center" 
        >
	    <com.beardedhen.androidbootstrap.BootstrapButton
                        android:id="@+id/permission_insert_add"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_margin="2dp"
                        android:text="添加"
                        android:layout_weight="1"
                        bootstrapbutton:bb_roundedCorners="true"
                        bootstrapbutton:bb_text_gravity="center"
                        bootstrapbutton:bb_type="danger" />
    </TableRow>
</TableLayout>
