<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
    android:id="@+id/kuaisu_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
<ScrollView
        android:id="@+id/kuaisu_main_scroll"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
         android:gravity="center"
         android:scrollbars="none"
        android:layout_weight="0.73" >
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
             >
            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/kuai_queryVip"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:text="快速查询会员"
                bootstrapbutton:bb_icon_left="fa-user"
                bootstrapbutton:bb_roundedCorners="true"
                bootstrapbutton:bb_text_gravity="center"
                bootstrapbutton:bb_type="primary" />

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/kuai_outOrder"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:text="快速出货订单"
                bootstrapbutton:bb_icon_left="fa-outdent"
                bootstrapbutton:bb_roundedCorners="true"
                bootstrapbutton:bb_text_gravity="center"
                bootstrapbutton:bb_type="danger" />

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/kuai_inOrder"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:text="快速进货订单"
                bootstrapbutton:bb_icon_left="fa-indent"
                bootstrapbutton:bb_roundedCorners="true"
                bootstrapbutton:bb_text_gravity="center"
                bootstrapbutton:bb_type="warning" />
             <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/kuai_wifi"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:text="查看wifi信息"
                bootstrapbutton:bb_icon_left="fa-eye-slash"
                bootstrapbutton:bb_roundedCorners="true"
                bootstrapbutton:bb_text_gravity="center"
                bootstrapbutton:bb_type="info" />
             <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/kuai_crm"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:text="快速添加客户关系"
                bootstrapbutton:bb_icon_left="fa-group"
                bootstrapbutton:bb_roundedCorners="true"
                bootstrapbutton:bb_text_gravity="center"
                bootstrapbutton:bb_type="success" />
            </LinearLayout>
            </ScrollView>
</LinearLayout>
