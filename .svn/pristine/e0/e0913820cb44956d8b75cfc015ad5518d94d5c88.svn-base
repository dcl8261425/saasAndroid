<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
  android:orientation="vertical"  
  android:layout_width="300dp"  
  android:background="@drawable/dialog_background"
  android:layout_height="wrap_content" >
       <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/weixin_gailan_autoresoure_item_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="id"
        android:singleLine="true"
        android:visibility="gone"
        bootstrapbutton:be_roundedCorners="true"
        bootstrapbutton:be_state="warning" />
      <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/weixin_gailan_autoresoure_item_query"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:text="添加新项"
                bootstrapbutton:bb_roundedCorners="true"
                bootstrapbutton:bb_text_gravity="center"
                bootstrapbutton:bb_type="success" />
      <ListView 
           android:id="@+id/weixin_gailan_autoresoure_item_list"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:scrollbars="none"
          android:divider="#00000000"
          android:gravity="center"
          ></ListView>
       <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/weixin_gailan_autoresoure_item_canel"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:text="取消"
                bootstrapbutton:bb_roundedCorners="true"
                bootstrapbutton:bb_text_gravity="center"
                bootstrapbutton:bb_type="danger" />
</LinearLayout>
