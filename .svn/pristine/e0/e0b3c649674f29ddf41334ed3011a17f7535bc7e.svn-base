<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >
     <TableRow 
                            android:layout_width="fill_parent"
                     android:layout_margin="0dp"
                    android:gravity="center" 
        >
        <TextView android:id="@+id/get_all_group_name"
	        android:layout_width="wrap_content"
	        android:layout_height="50dp"
	        android:textSize="20dp"
	        android:textStyle="bold"
	        android:layout_weight="1"
	        android:dividerHeight="0dp"
	        android:textColor="@color/darksalmon"
	        android:gravity="center"
	        />
        </TableRow>
        <TableRow 
                            android:layout_width="fill_parent"
                     android:layout_margin="0dp"
                    android:gravity="center" 
        >
	    <TextView android:id="@+id/get_all_group_truename"
	        android:layout_width="wrap_content"
	        android:layout_height="50dp"
	        android:textSize="20dp"
	        android:textStyle="bold"
	        android:layout_weight="1"
	                android:dividerHeight="0dp"
	        android:textColor="@color/darksalmon"
	        android:gravity="center"
	        />
	    </TableRow>
	    <TableRow 
                 android:layout_width="fill_parent"
          android:layout_margin="0dp"
         android:gravity="center" 
        >
	    <TextView android:id="@+id/get_all_group_usernum"
	        android:layout_width="wrap_content"
	        android:layout_height="50dp"
	        android:textSize="20dp"
	        android:textStyle="bold"
	        android:layout_weight="1"
	                android:dividerHeight="0dp"
	        android:textColor="@color/darksalmon"
	        android:gravity="center"
	        />
	    </TableRow>
	    <TableRow 
                            android:layout_width="fill_parent"
                     android:layout_margin="0dp"
                    android:gravity="center" 
        >
	    <TextView android:id="@+id/get_all_group_marks"
	        android:layout_width="wrap_content"
	        android:layout_height="50dp"
	        android:textSize="20dp"
	        android:textStyle="bold"
	        android:layout_weight="1"
	                android:dividerHeight="0dp"
	        android:textColor="@color/darksalmon"
	        android:gravity="center"
	        />
    </TableRow>
    	<com.beardedhen.androidbootstrap.BootstrapButton
              android:id="@+id/get_all_group_role_manager"
              android:layout_width="wrap_content"
              android:layout_height="50dp"
              android:layout_margin="2dp"
              android:text="管理角色及角色权限"
              bootstrapbutton:bb_roundedCorners="true"
              bootstrapbutton:bb_text_gravity="center"
              bootstrapbutton:bb_type="danger" /> 
    <TableRow 
                            android:layout_width="fill_parent"
                     android:layout_margin="0dp"
                    android:gravity="center" 
        >	
        <com.beardedhen.androidbootstrap.BootstrapButton
                        android:id="@+id/get_all_group_user_manager"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_margin="2dp"
                        android:text="组员管理"
                        android:layout_weight="1"
                        bootstrapbutton:bb_roundedCorners="true"
                        bootstrapbutton:bb_text_gravity="center"
                        bootstrapbutton:bb_type="danger" />    
	    <com.beardedhen.androidbootstrap.BootstrapButton
                        android:id="@+id/get_all_group_leaf"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_margin="2dp"
                        android:text="查询显示子组"
                        android:layout_weight="1"
                        bootstrapbutton:bb_roundedCorners="true"
                        bootstrapbutton:bb_text_gravity="center"
                        bootstrapbutton:bb_type="danger" />
	    </TableRow>
    <TableRow 
                            android:layout_width="fill_parent"
                     android:layout_margin="0dp"
                    android:gravity="center" 
        >	
        <com.beardedhen.androidbootstrap.BootstrapButton
                        android:id="@+id/get_all_group_update"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_margin="2dp"
                        android:text="修改组信息"
                        android:layout_weight="1"
                        bootstrapbutton:bb_roundedCorners="true"
                        bootstrapbutton:bb_text_gravity="center"
                        bootstrapbutton:bb_type="danger" />    
	    <com.beardedhen.androidbootstrap.BootstrapButton
                        android:id="@+id/get_all_group_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_margin="2dp"
                        android:text="删除组"
                        android:layout_weight="1"
                        bootstrapbutton:bb_roundedCorners="true"
                        bootstrapbutton:bb_text_gravity="center"
                        bootstrapbutton:bb_type="danger" />
	    </TableRow>

</TableLayout>
