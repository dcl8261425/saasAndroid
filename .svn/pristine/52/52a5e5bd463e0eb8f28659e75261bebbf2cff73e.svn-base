package com.herotculb.qunhaichat.weixin.operationvip;

import java.util.List;
import java.util.Map;

import com.herotculb.qunhaichat.HomeActivity;
import com.herotculb.qunhaichat.util.QNPermissionApiImpl;

import android.app.Activity;
import android.content.Context;
import android.content.Intent;
import android.content.SharedPreferences;
import android.os.Handler;
import android.os.Looper;
import android.os.Message;

public class WeixinUpdateVipListThread extends Thread {
	private Context context;
	private String id;
	private String marks;
	private String sroce;
	private String name;
	private Handler handler;
	
	public WeixinUpdateVipListThread(Context context, String id, String marks,
			String sroce, String name, Handler handler) {
		super();
		this.context = context;
		this.id = id;
		this.marks = marks;
		this.sroce = sroce;
		this.name = name;
		this.handler = handler;
	}

	@Override
	public void run() {
		super.run();
		Looper.prepare();
		
		QNPermissionApiImpl qnpAPi=new QNPermissionApiImpl(context);
		List<Map<String, Object>> list=qnpAPi.updateVipList(id, name, sroce, marks);
		Map<String,Object> map=list.iterator().next();
		boolean b=(Boolean) map.get("success");
		String info=(String) map.get("info");
		if(b){
			Intent mainIntent = new Intent().setClass(context, HomeActivity.class);
			context.startActivity(mainIntent);
			SharedPreferences mySharedPreferences = context.getSharedPreferences("usermessage", 
					Activity.MODE_PRIVATE); 
		}else{
			//获取数据失败
			Message sendmsg = Message.obtain();  
            sendmsg.obj = list;   //利用Message.obj把子线程的handle传递给主线程。  
            handler.sendMessage(sendmsg);  
		}
	}
	
}
