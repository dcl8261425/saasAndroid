<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
    android:id="@+id/message_vip_send_duihuan_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	<TableLayout android:layout_width="match_parent"
	    android:layout_height="fill_parent"
	    android:layout_gravity="center">
	    <TextView android:id="@+id/message_vip_send_duihuan_text"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"/>
	    <TextView android:id="@+id/message_vip_send_duihuan_id"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:visibility="gone"/>
      <com.beardedhen.androidbootstrap.BootstrapButton
                        android:id="@+id/message_vip_send_duihuan_jiangpin"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:text="选择奖品"
                        bootstrapbutton:bb_roundedCorners="true"
                        bootstrapbutton:bb_text_gravity="center"
                        bootstrapbutton:bb_type="primary" />
                    
       <com.beardedhen.androidbootstrap.BootstrapEditText
	        android:id="@+id/message_vip_send_duihuan_num"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_margin="5dp"
	        android:hint="发送数量"
	        android:singleLine="true"
	        bootstrapbutton:be_roundedCorners="true"
	        bootstrapbutton:be_state="warning" />
       <com.beardedhen.androidbootstrap.BootstrapEditText
	        android:id="@+id/message_vip_send_duihuan_marks"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_margin="5dp"
	        android:hint="内容"
	        android:singleLine="false"
	        bootstrapbutton:be_roundedCorners="true"
	        bootstrapbutton:be_state="warning" />
       
       <com.beardedhen.androidbootstrap.BootstrapButton
             android:id="@+id/message_vip_send_duihuan_enter"
             android:layout_width="match_parent"
             android:layout_height="50dp"
             android:layout_margin="5dp"
             android:text="确认"
             bootstrapbutton:bb_icon_left="fa-th-list"
             bootstrapbutton:bb_roundedCorners="true"
             bootstrapbutton:bb_text_gravity="center"
             bootstrapbutton:bb_type="primary" />     
       <com.beardedhen.androidbootstrap.BootstrapButton
             android:id="@+id/message_vip_send_duihuan"
             android:layout_width="match_parent"
             android:layout_height="50dp"
             android:layout_margin="5dp"
             android:text="用本机发送短信"
             bootstrapbutton:bb_icon_left="fa-th-list"
             bootstrapbutton:bb_roundedCorners="true"
             bootstrapbutton:bb_text_gravity="center"
             bootstrapbutton:bb_type="primary" />     
	</TableLayout>
</LinearLayout>