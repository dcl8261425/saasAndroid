<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.herotculb.fragmentdemo.MainActivity$PlaceholderFragment" >

   <LinearLayout
       android:id="@+id/linear_chuanjian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#0000"
            android:src="@drawable/bind_mcontact_reco_friends" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="创建群聊"
            android:textColor="#000000"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <include layout="@layout/layout_line1" />

    <LinearLayout
        android:id="@+id/linear_jiaru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#0000"
            android:src="@drawable/auto_add_friend_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="加入群聊"
            android:textColor="#000000"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <include layout="@layout/layout_line1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="群列表功能即将上线，敬请期待..."
            android:gravity="center"
            android:textColor="#000000"
            android:textStyle="bold|italic" />
</LinearLayout>
