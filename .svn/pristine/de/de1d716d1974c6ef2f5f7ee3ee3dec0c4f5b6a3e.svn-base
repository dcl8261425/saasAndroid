<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
    android:id="@+id/message_vip_send_ordinary_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/message_vip_send_ordinary_scroll"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none"
        android:layout_weight="0.73"
        android:gravity="center" >   

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                 android:layout_margin="0dp"
                android:gravity="center" >
					<TextView android:id="@+id/message_vip_send_ordinary_text"
					    android:layout_width="match_parent"
					    android:layout_height="wrap_content"/>
                    <com.beardedhen.androidbootstrap.BootstrapEditText
				        android:id="@+id/message_vip_send_ordinary_num"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:layout_margin="5dp"
				        android:hint="发送数量"
				        android:singleLine="true"
				        bootstrapbutton:be_roundedCorners="true"
				        bootstrapbutton:be_state="warning" />
                    <com.beardedhen.androidbootstrap.BootstrapEditText
				        android:id="@+id/message_vip_send_ordinary_marks"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:layout_margin="5dp"
				        android:singleLine="false"
				        bootstrapbutton:be_roundedCorners="true"
				        bootstrapbutton:be_state="warning" />

                    <com.beardedhen.androidbootstrap.BootstrapButton
                        android:id="@+id/message_vip_send_ordinary_enter"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:text="确认"
                        bootstrapbutton:bb_icon_left="fa-sign-in"
                        bootstrapbutton:bb_roundedCorners="true"
                        bootstrapbutton:bb_text_gravity="center"
                        bootstrapbutton:bb_type="danger" />
            </TableLayout>
            
        </LinearLayout>
    </ScrollView>  

</LinearLayout>