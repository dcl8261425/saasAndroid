<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >
        <TextView android:id="@+id/employee_company_user_truename"
	        android:layout_width="fill_parent"
	        android:layout_height="50dp"
	        android:textSize="20dp"
	        android:textStyle="bold"
	                android:dividerHeight="0dp"
	        android:textColor="@color/darksalmon"
	        android:gravity="center"
	        />
        <TextView android:id="@+id/employee_start_date"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:textSize="20dp"
	        android:textColor="@color/darksalmon"
	        android:gravity="center"
	        />
        <TextView android:id="@+id/employee_end_date"
	        android:layout_width="fill_parent"
	        android:layout_height="50dp"
	        android:textSize="20dp"
	        android:textStyle="bold"
	                android:dividerHeight="0dp"
	        android:textColor="@color/darksalmon"
	        android:gravity="center"
	        />
        <TableRow android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/employee_stute_id"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:visibility="gone"
		        />
            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/employee_stute"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_margin="10dp"
		        android:layout_weight="1"
		        android:enabled="false"
		        android:singleLine="true"
		        android:textSize="20dp"
	        	android:textStyle="bold"
	        	android:textColor="@color/darksalmon"
		        bootstrapbutton:be_roundedCorners="true"
		        bootstrapbutton:be_state="warning"
		        />
            </TableRow>
            <TableRow android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <com.beardedhen.androidbootstrap.BootstrapButton
                        android:id="@+id/employee_stute_select"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_margin="2dp"
                        android:text="选择"
                        android:layout_weight="1"
                        bootstrapbutton:bb_roundedCorners="true"
                        bootstrapbutton:bb_text_gravity="center"
                        bootstrapbutton:bb_type="danger" />
            <com.beardedhen.androidbootstrap.BootstrapButton
                        android:id="@+id/employee_stute_update"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_margin="2dp"
                        android:text="修改"
                        android:layout_weight="1"
                        bootstrapbutton:bb_roundedCorners="true"
                        bootstrapbutton:bb_text_gravity="center"
                        bootstrapbutton:bb_type="danger" />
            <com.beardedhen.androidbootstrap.BootstrapButton
                        android:id="@+id/employee_stute_enter"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_margin="2dp"
                        android:text="确定"
                        android:visibility="gone"
                        android:layout_weight="1"
                        bootstrapbutton:bb_roundedCorners="true"
                        bootstrapbutton:bb_text_gravity="center"
                        bootstrapbutton:bb_type="danger" />
        </TableRow>
        <TableRow android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/employee_stute_marks"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_margin="10dp"
		        android:layout_weight="1"
		        android:enabled="false"
		        android:singleLine="true"
		        android:textSize="20dp"
	        	android:textStyle="bold"
	        	android:textColor="@color/darksalmon"
		        bootstrapbutton:be_roundedCorners="true"
		        bootstrapbutton:be_state="warning"
		        />
            <com.beardedhen.androidbootstrap.BootstrapButton
                        android:id="@+id/employee_stute_marks_update"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_margin="2dp"
                        android:text="修改"
                        android:layout_weight="1"
                        bootstrapbutton:bb_roundedCorners="true"
                        bootstrapbutton:bb_text_gravity="center"
                        bootstrapbutton:bb_type="danger" />
            <com.beardedhen.androidbootstrap.BootstrapButton
                        android:id="@+id/employee_stute_marks_enter"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_margin="2dp"
                        android:text="确定"
                        android:visibility="gone"
                        android:layout_weight="1"
                        bootstrapbutton:bb_roundedCorners="true"
                        bootstrapbutton:bb_text_gravity="center"
                        bootstrapbutton:bb_type="danger" />
        </TableRow>
        
</TableLayout>
