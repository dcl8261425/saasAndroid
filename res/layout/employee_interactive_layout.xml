<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
    android:id="@+id/employee_interactive_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                 android:layout_margin="0dp"
                android:gravity="center" >
				<TableRow android:layout_width="fill_parent"
				    android:layout_height="wrap_content">
				    <com.beardedhen.androidbootstrap.BootstrapButton
                        android:id="@+id/employee_interactive_lime"
                        android:layout_width="fill_parent"
                        android:layout_height="80dp"
                        android:layout_margin="5dp"
                        android:text="青柠网络科技"
                        android:layout_weight="1"
                        bootstrapbutton:bb_icon_left="fa-sign-in"
                        bootstrapbutton:bb_roundedCorners="true"
                        bootstrapbutton:bb_text_gravity="center"
                        bootstrapbutton:bb_type="primary" />
				    <com.beardedhen.androidbootstrap.BootstrapButton
                        android:id="@+id/employee_interactive_business"
                        android:layout_width="fill_parent"
                        android:layout_height="80dp"
                        android:layout_margin="5dp"
                        android:text="业务部"
                        android:layout_weight="1"
                        bootstrapbutton:bb_icon_left="fa-sign-in"
                        bootstrapbutton:bb_roundedCorners="true"
                        bootstrapbutton:bb_text_gravity="center"
                        bootstrapbutton:bb_type="primary" />
				</TableRow>
					<com.beardedhen.androidbootstrap.BootstrapButton
                        android:id="@+id/employee_interactive_send"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:text="发表新评论"
                        bootstrapbutton:bb_roundedCorners="true"
                        bootstrapbutton:bb_text_gravity="center"
                        bootstrapbutton:bb_type="danger" />
            </TableLayout>
		     	<com.beardedhen.androidbootstrap.BootstrapEditText
			        android:id="@+id/employee_interactive_nowpage"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_margin="10dp"
			        android:hint="id"
			        android:singleLine="true"
			        android:visibility="gone"
			        bootstrapbutton:be_roundedCorners="true"
			        bootstrapbutton:be_state="warning" />
                <com.herotculb.qunhaichat.view.listview.updown.XListView
                    android:id="@+id/employee_interactive_list"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:divider="#00000000"
                    android:gravity="center"
                    android:scrollbars="none" />
                        
</LinearLayout>