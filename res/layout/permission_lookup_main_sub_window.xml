<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
    android:id="@+id/permission_lookup_main_sub_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
            
            <TableLayout
                android:id="@+id/permission_lookup_main_sub_tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >
                    <TableRow android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.beardedhen.androidbootstrap.BootstrapEditText
					        android:id="@+id/permission_lookup_main_sub_id"
					        android:layout_width="match_parent"
					        android:layout_height="wrap_content"
					        android:layout_margin="10dp"
					        android:visibility="gone"
					        android:singleLine="true"
					        bootstrapbutton:be_roundedCorners="true"
					        bootstrapbutton:be_state="warning" />
                        <com.beardedhen.androidbootstrap.BootstrapEditText
					        android:id="@+id/permission_lookup_main_sub_gname"
					        android:layout_width="match_parent"
					        android:layout_height="wrap_content"
					        android:layout_margin="10dp"
					        android:visibility="gone"
					        android:singleLine="true"
					        bootstrapbutton:be_roundedCorners="true"
					        bootstrapbutton:be_state="warning" />
                        <com.beardedhen.androidbootstrap.BootstrapEditText
					        android:id="@+id/permission_lookup_main_sub_name"
					        android:layout_width="match_parent"
					        android:layout_height="wrap_content"
					        android:layout_margin="10dp"
					        android:hint="通过功能名查找"
					        android:layout_weight="1"
					        android:singleLine="true"
					        bootstrapbutton:be_roundedCorners="true"
					        bootstrapbutton:be_state="warning" />
                    </TableRow>
                    <TableRow android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
			      <com.beardedhen.androidbootstrap.BootstrapButton
			                        android:id="@+id/permission_lookup_main_sub_name_query"
			                        android:layout_width="fill_parent"
			                        android:layout_height="50dp"
			                        android:layout_margin="5dp"
			                        android:text="查询"
			                        android:layout_weight="4"
			                        bootstrapbutton:bb_icon_left="fa-th-list"
			                        bootstrapbutton:bb_roundedCorners="true"
			                        bootstrapbutton:bb_text_gravity="center"
			                        bootstrapbutton:bb_type="primary" />
			      <com.beardedhen.androidbootstrap.BootstrapButton
			                        android:id="@+id/permission_lookup_main_sub_cancle"
			                        android:layout_width="fill_parent"
			                        android:layout_height="50dp"
			                        android:layout_margin="5dp"
			                        android:text="取消"
			                        android:layout_weight="1"
			                        bootstrapbutton:bb_icon_left="fa-th-list"
			                        bootstrapbutton:bb_roundedCorners="true"
			                        bootstrapbutton:bb_text_gravity="center"
			                        bootstrapbutton:bb_type="primary" />
			      </TableRow>
			      	  <ListView
			      	      android:id="@+id/permission_lookup_main_sub_list"
			                    android:layout_width="match_parent"
			                    android:layout_height="wrap_content"
			                    android:layout_margin="5dp"
			                    android:divider="#00000000"
			                    android:gravity="center"
			                    android:scrollbars="none"/>
		</TableLayout>

</LinearLayout>