<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >
        <TextView android:id="@+id/chanceListName"
	        android:layout_width="wrap_content"
	        android:layout_height="50dp"
	        android:textSize="20dp"
	        android:textStyle="bold"
	        android:layout_weight="1"
	        android:dividerHeight="0dp"
	        android:textColor="@color/darksalmon"
	        android:gravity="center"
	        />
	    <TextView android:id="@+id/linkManName"
	        android:layout_width="wrap_content"
	        android:layout_height="50dp"
	        android:textSize="20dp"
	        android:textStyle="bold"
	        android:layout_weight="1"
	                android:dividerHeight="0dp"
	        android:textColor="@color/darksalmon"
	        android:gravity="center"
	        />
	    <TextView android:id="@+id/vip_linkManPhone"
	        android:layout_width="wrap_content"
	        android:layout_height="50dp"
	        android:textSize="20dp"
	        android:textStyle="bold"
	        android:layout_weight="1"
	                android:dividerHeight="0dp"
	        android:textColor="@color/darksalmon"
	        android:gravity="center"
	        />
	    <TextView android:id="@+id/vip_linkManScore"
	        android:layout_width="wrap_content"
	        android:layout_height="50dp"
	        android:textSize="20dp"
	        android:textStyle="bold"
	        android:layout_weight="1"
	                android:dividerHeight="0dp"
	        android:textColor="@color/darksalmon"
	        android:gravity="center"
	        />
	    <TextView android:id="@+id/vip_money"
	        android:layout_width="wrap_content"
	        android:layout_height="50dp"
	        android:textSize="20dp"
	        android:textStyle="bold"
	        android:layout_weight="1"
	                android:dividerHeight="0dp"
	        android:textColor="@color/darksalmon"
	        android:gravity="center"
	        />
	    <TableRow android:layout_width="fill_parent"
	        android:layout_height="wrap_content">
	        <com.beardedhen.androidbootstrap.BootstrapButton
                        android:id="@+id/weixin_vip_add_money"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_margin="2dp"
                        android:text="储值"
                        android:layout_weight="1"
                        bootstrapbutton:bb_roundedCorners="true"
                        bootstrapbutton:bb_text_gravity="center"
                        bootstrapbutton:bb_type="danger" />    
	    <com.beardedhen.androidbootstrap.BootstrapButton
                        android:id="@+id/weixin_vip_jian_money"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_margin="2dp"
                        android:text="减储值"
                        android:layout_weight="1"
                        bootstrapbutton:bb_roundedCorners="true"
                        bootstrapbutton:bb_text_gravity="center"
                        bootstrapbutton:bb_type="danger" />
	    </TableRow>
        <TableRow android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <com.beardedhen.androidbootstrap.BootstrapButton
                        android:id="@+id/weixin_vip_add_score"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_margin="2dp"
                        android:text="添加积分"
                        android:layout_weight="1"
                        bootstrapbutton:bb_roundedCorners="true"
                        bootstrapbutton:bb_text_gravity="center"
                        bootstrapbutton:bb_type="danger" />
	    <com.beardedhen.androidbootstrap.BootstrapButton
                        android:id="@+id/weixin_vip_jian_score"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_margin="2dp"
                        android:text="减积分"
                        android:layout_weight="1"
                        bootstrapbutton:bb_roundedCorners="true"
                        bootstrapbutton:bb_text_gravity="center"
                        bootstrapbutton:bb_type="danger" />
        </TableRow>
	    <com.beardedhen.androidbootstrap.BootstrapButton
                        android:id="@+id/weixin_vip_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_margin="2dp"
                        android:text="优惠"
                        android:layout_weight="1"
                        bootstrapbutton:bb_roundedCorners="true"
                        bootstrapbutton:bb_text_gravity="center"
                        bootstrapbutton:bb_type="danger" />

</TableLayout>
